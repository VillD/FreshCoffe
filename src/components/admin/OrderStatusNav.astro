---
import { currentPage } from "@/utils";
import { orderStatusOptions } from "@/utils/constants";
const current = Astro.url.pathname
---
<nav class="flex gap-5">
  {orderStatusOptions.map( status => (
    <a 
      href={`/admin/orders/${status.value}`} 
       class={`${currentPage(`/admin/orders/${status.value}`, current) ? 'bg-green-800'  : 'bg-green-600' }  hover:bg-green-800 transition-colors p-2 text-white rounded`}
    >{status.label}</a>
  ))}
</nav>