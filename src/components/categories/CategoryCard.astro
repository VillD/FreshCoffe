---
import type { Category } from '@/types';
import { Picture } from 'astro:assets';
interface Props{
    category: Category
}

const { category } = Astro.props;

const currentCategory = () => category.slug === Astro.params.category;
---

<a href={`/order/${category.slug}`} class={`${currentCategory() ? 'bg-amber-400' : 'bg-white text-gray-900'} flex items-center gap-4 px-4 py-2 border-t-2 border-gray-900 latest:border-b`}>
    <Picture
        src={category.acf.icon}
        alt={`Imagen de CategorÃ­a ${category.name}`}
        width={300}
        height={300}
        class="w-20 h-20"
    />
    <p class="text-xl font-bold">{category.name}</p>
</a>