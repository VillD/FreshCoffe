---
import AdminOrdersLayout from "@/layouts/AdminOrdersLayout.astro";
import { orderStatusOptions } from "@/utils/constants";
import OrderList from "@/components/admin/orders/OrderList.tsx";

const { status } = Astro.params;
const currentStatus = orderStatusOptions.filter( option => option.value === status)[0];

---

<AdminOrdersLayout title={`Administrar Ordenes - ${currentStatus.label}`}>
    <OrderList client:only="react" status={currentStatus.value}/>
</AdminOrdersLayout>
